extends ../layout-login

block content
  .container
    .wrapper.headings
      h1 Welcome to your TO DO App! 
      h3 Please Sign In
      form.form-signin(action='login', method='POST', name='Login_Form')
        hr.colorgraph
        br
        input.form-control(type='text', name='username', placeholder='Username', required='', autofocus='')
        br
        input.form-control(type='password', name='password', placeholder='Password', required='')
        br
        button.btn.btn-lg.btn-info.btn-block(name='Submit', value='Login', type='Submit') Login
        br
        a.register(name='Submit', value='Login', type='Submit' href='register') Register
      
